<%- include('header.ejs') %>
    <%- include('navbar.ejs') %>
    <main id="home">
        <section>
            <h1>Productos a la venta</h1>
            <div id="products-list" class="container row-cols-4 row-cols-md-4 g-4">
                <% products.forEach(product => { %>
                    <a href="/product/<%=product._id %>" class="product-link">
                        <div class="product">
                            <div class="card h-100">
                                <img src="<%=product.image %>" class="card-img-top" alt="">
                                <div class="card-body">
                                    <h5 class="card-title"><%= product.name %></h5>
                                    <p class="card-text"><%=product.description %></p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-body-secondary">Last updated: 21/05/2024</small>
                                </div>
                            </div>
                        </div>
                    </a>
                <% }) %>
            </div>
        </section>
    </main>
<%- include('footer.ejs') %>
